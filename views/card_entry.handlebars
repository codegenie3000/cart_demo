{{> head_cart }}

<body id="checkout" class="step04">
{{> top_menu }}
<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center">
			<h1>Checkout - Verify information</h1>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-5">
			<div class="row">
				<div class="col-sm-12">
					<div class="panel panel-default">
						<div class="panel-heading">Billing Information <a href="/cart/checkout01">edit</a></div>
						<div class="panel-body">
							{{#with billingAddress}}
								Name: {{name}}<br>
								Address: {{address}}<br>
								City, State, Zip: {{city}}, {{state}} {{zip}}<br>
								Phone: {{phone}}<br>
								Email: {{email}}
							{{/with}}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-7">
			<div class="panel panel-default">
				<div class="panel-heading">
					Credit Card Details
				</div>
				<div class="panel-body">
					<form class="form-horizontal" id="checkout-card">
						<div class="form-group">
							<label for="card-number" class="col-sm-2 control-label">Card Number</label>
							<div class="col-sm-10">
								<input class="form-control required" id="card-number">
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label">Expiration Date</label>
							<div class="col-sm-10">
								<div class="form-inline">
									<div class="form-group">
										<label for="expirationMonth" class="control-label sr-only">Month</label>
										<input class="form-control" id="expirationMonth" placeholder="MM">
									</div>
									<div class="form-group">
										<label for="expirationYear" class="control-label sr-only">Year</label>
										<input class="form-control" id="expirationYear" placeholder="YY">
									</div>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label for="cvc" class="control-label col-sm-2">CVC Code</label>
							<div class="col-sm-2">
								<input type="text" id="cvc" class="form-control">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 text-center">
			<button class="btn btn-default">Back</button>
			<button class="btn btn-primary">Next</button>
		</div>
	</div>
</div>
{{> scripts }}
</body>